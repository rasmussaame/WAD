<html>
<head>
  <title>Page Title</title>
  <link rel="stylesheet" href="/main.css">
</head>
<body>
  <%- include("../partial/header.ejs") %>

  <div class="body-container"> <!-- See klass venitab täispikkuseks, kui contenti vähem @Kaarel -->
    <!-- TODO see klass ei tööta päris kui ilma pildita post -->
    <div class="homepage body-container">
      <div class="container">
            <div class="post">
              <h2><%= post.body %></h2>
              <div class="topper">
                <img src="/img/user.png" alt="User" />
                <p class="date"><%= post.createdAt %></p>
              </div>
              <% if(post.image != "") { %>
                <img src=" <%= post.image %> " alt=" <%= post.body %> " />
              <% } %>
              <div class="right-like">
                <p>Likes: <%= post.likes %></p>
              </div>
            </div>
            <div class="center">
              <a href="/deletepost/<%= post.id %>" + post.id>Delete</a>
            </div>
        </div>
      </div>
    </div>
  </div>

  <%- include("../partial/footer.ejs") %>
 </body>
</html>